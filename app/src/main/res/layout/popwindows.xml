<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tupian"
        android:padding="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入IP"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#e0e0e0"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入端口号"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/et_ip"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_port"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#e0e0e0"
        android:layout_below="@id/text_ip"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/cancel"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/et_port"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/et_ip"
        android:background="@drawable/cancel" />
    <Button
        android:id="@+id/comfirm"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_port"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/et_port"
        android:background="@drawable/comfirm"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/comfirm"/>


</RelativeLayout>